<tr>
  <td class="text-center"><%= link_to customer.code, customer %></td>
  <td><%= link_to customer.company_name, customer %></td>
  <td><%= customer.first_name + " " + customer.last_name %></td>
  <td class="text-center">
    <%= link_to "Ver", customer, class: "btn btn-small btn-success" %>
    <% if current_user.admin? %>
    <%= link_to "Editar", edit_customer_path(customer), class: "btn btn-small" %>
    <%= link_to "Borrar", customer, class: "btn btn-small btn-danger", method: :delete, data: { confirm: "Esta seguro?" } %>
    <% end %>
  </td>
</tr>