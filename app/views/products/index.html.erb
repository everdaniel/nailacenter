<% provide(:title, "Productos") %>
<div class="page-header">
	<div class="row">
		<div class="span9">
			<h2>Productos <small>Gestión de Productos</small></h2>
		</div>
		<div class="span3">
			<p class="text-right">
				<%= link_to "Nuevo producto", new_product_path, class: "btn btn-primary btn-large" %>
			</p>
		</div>
	</div>
</div>

<div class="row">
	<div class="offset8 span4">
		<%= form_tag products_path, :method => "get", :class => "form-search" do %>
			<%= text_field_tag :search, params[:search], :class => "input-medium search-query" %>
		  <%= button_tag "Buscar", :type => "submit", :class => "btn btn-inverse", :name => nil %>
		<% end %>
	</div>
</div>

<%= will_paginate %>

<table class="table table-striped table-bordered table-hover table-condensed">
	<thead>
		<tr>
			<th>Código</th>
			<th>Nombre</th>
			<th>Activo?</th>
			<th>Precio</th>
			<th>Stock</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		<%= render @products %>
	</tbody>
</table>

<%= will_paginate %>