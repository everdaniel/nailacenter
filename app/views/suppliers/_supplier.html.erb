<tr>
  <td class="text-center"><%= link_to supplier.id, supplier %></td>
  <td><%= link_to supplier.short_name, supplier %></td>
  <td><%= supplier.name %></td>
  <td class="text-center">
    <%= link_to "Ver", supplier, class: "btn btn-small btn-success" %>
    <% if current_user.admin? %>
    <%= link_to "Editar", edit_supplier_path(supplier), class: "btn btn-small" %>
    <%= link_to "Borrar", supplier, class: "btn btn-small btn-danger", method: :delete, data: { confirm: "Esta seguro?" } %>
    <% end %>
  </td>
</tr>