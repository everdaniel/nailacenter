<% provide(:title, "Nuevo proveedor") %>
<h2>Nuevo proveedor</h2>

<%= form_for @supplier, :html => { :class => "form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="<%= control_group_class @supplier, :short_name %>">
    <%= f.label :short_name, "Nombre corto", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :short_name %>
    </div>
  </div>

  <div class="<%= control_group_class @supplier, :name %>">
    <%= f.label :name, "Nombre completo", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="<%= control_group_class @supplier, :description %>">
    <%= f.label :description, "DescripciÃ³n", class: "control-label" %>
    <div class="controls">
      <%= f.text_area :description, :rows => 4 %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Guardar", class: "btn btn-large btn-primary" %>
