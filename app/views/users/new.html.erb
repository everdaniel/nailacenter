<% provide(:title, "Nuevo usuario") %>
<h2>Nuevo usuario</h2>

<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="<%= control_group_class @user, :first_name %>">
    <%= f.label :first_name, "Nombre(s)", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="<%= control_group_class @user, :last_name %>">
    <%= f.label :last_name, "Apellido(s)", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="<%= control_group_class @user, :username %>">
    <%= f.label :username, "Usuario", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="<%= control_group_class @user, :email %>">
    <%= f.label :email, "Email", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="<%= control_group_class @user, :password %>">
    <%= f.label :password, "Password", class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="<%= control_group_class @user, :password_confirmation %>">
    <%= f.label :password_confirmation, "Confirmar Password", class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="<%= control_group_class @user, :admin %>">
    <%= f.label :admin, "Es admin?", class: "control-label" %>
    <div class="controls">
      <%= f.check_box :admin %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Guardar", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>