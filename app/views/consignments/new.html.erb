<% provide(:title, "Nuevo pedido") %>
<h2>Nuevo pedido</h2>

<%= form_for @consignment, :html => { :class => "form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="<%#= control_group_class @consignment.supplier, :supplier %>">
    <%= f.label :supplier_id, "Proveedor", class: "control-label" %>
    <div class="controls">
      <%= f.select :supplier_id, options_from_collection_for_select(@suppliers, "id", "name") %>
    </div>
  </div>

  <div class="<%= control_group_class @consignment, :name %>">
    <%= f.label :name, "Nombre", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Guardar", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>